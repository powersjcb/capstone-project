<div class="profile-img">
    <img src="<%= user.escape('profile_img_url') %>" />
</div>

<div class="message-body">
  <div class="message-header">
    <span class="message-username"><%= user.escape('username') %></span>
    <span class="timestamp"><%= timestamp %></span>
  </div>
  <p class="content"><%= message.escape('content') %></p>
  <div class="message-img">
    <img src="<%= message.escape('url') %>"/>
  </div>
</div>
